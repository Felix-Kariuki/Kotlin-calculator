<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:textSize="50sp"
       android:text=""
        android:textColor="@color/colorGray"
       android:gravity="end"
       android:ellipsize="start"
        android:layout_marginTop="50dp"
       android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="60sp"
        android:text=""
        android:textColor="@color/colorWhite"
        android:gravity="end"
        android:ellipsize="start"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@color/colorBlack"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="@string/c"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/colorWhite"
                    app:backgroundTint="@color/colorBlack"
                    android:stateListAnimator="@null"
                    android:background="@drawable/btn_equal_bg"
                    tools:targetApi="lollipop" />
            </RelativeLayout>
            <Button
                android:id="@+id/btnLeftBrace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/lBrace"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <Button
                android:id="@+id/btnRightBrace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/rBrace"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
            <Button
                android:id="@+id/btnDivide"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/slash"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBtnDivide"
                android:stateListAnimator="@null"
                android:background="@drawable/btn_equal_bg"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/_7"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/_8"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/_9"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/x"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/colorWhite"
                app:backgroundTint="#44AF39"
                android:stateListAnimator="@null"
                android:background="@drawable/btn_equal_bg"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/_4"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/_5"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/_6"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
            <Button
                android:id="@+id/btnMinus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/dash"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/colorWhite"
                app:backgroundTint="#3A52Fc"
                android:stateListAnimator="@null"
                android:background="@drawable/btn_equal_bg"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/_1"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/_2"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/_3"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
            <Button
                android:id="@+id/btnPlus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/plus"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorAccent"
                android:stateListAnimator="@null"
                android:background="@drawable/btn_equal_bg"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn00"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/_00"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/_0"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <Button
                android:id="@+id/btnDot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/dot"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                app:backgroundTint="@color/colorBlack"
                android:stateListAnimator="@null"
                android:background="@color/colorBlack"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnEqual"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_equal_bg"
                    android:stateListAnimator="@null"
                    android:text="@string/equal"
                    android:textColor="@color/colorWhite"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/purple_200" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>